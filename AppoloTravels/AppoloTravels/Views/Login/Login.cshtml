@model AppoloTravels.Models.Login
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title> Log In </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <style>
        .alert-primary {
            background-color:aliceblue;
            width:300px;
            left:500px;
            top:100px;
            bottom:500px;
            right:250px;
        }
        .form-control
        {
            width:200px;
        }
        div {
            width: 600px;
            bottom:50px;
        }
       body
       {
           background-color:whitesmoke;
       }
       .Log
       {
           text-align:center;
       }

    </style>
</head>
<body>
    <h1 class="Log"> Transport Management System </h1>
    <div class="alert alert-primary">
        
        <form asp-action="Login">
            <div>
                <label asp-for="UserName">Username</label>             
                <input type="text" class="form-control" asp-for="UserName" placeholder="Enter your Name" required />


            </div>
            <div>
                <label asp-for="PassWord"> Password </label>
                <input type="password" class="form-control" asp-for="PassWord" placeholder="Enter Password" required/>

            </div>
            <br>

            <div>

                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</body>
</html>